---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="section">
    <h2>{title}</h2>
    <div class="section-content">
        <slot />
    </div>
</div>

<style lang="scss">
    .section {
        width: 100%;

        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }
    h2 {
        font-size: 2rem;
        font-weight: 400;

        color: $gray-800;
    }
    .section-content {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 400px));
        grid-gap: 3rem;
        justify-content: center;
    }
</style>
